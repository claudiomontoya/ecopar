@model Modelo.bodega

@{
    ViewBag.Title = "Details";
    var encargado = ViewBag.encargado;
}

<div>
    <h4>Bodega</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Encargado
        </dt>

        <dd>
            @(encargado.rut + ' ' + encargado.nombre + ' ' + encargado.apellido) <a href="/Personas/Details/@encargado.id"> Ver Detalles</a>
        </dd>

        <dt>
            Rut Cliente
        </dt>

        <dd>
            @Html.DisplayFor(model => model.clientes.rut)
        </dd>

        <dt>
           Comuna
        </dt>

        <dd>
            @Html.DisplayFor(model => model.comunas.comuna)
        </dd>

        <dt>
            Descripcion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt>
            Direccion
        </dt>

        <dd>
            @Html.DisplayFor(model => model.direccion)
        </dd>

        <dt>
            Numero
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numero)
        </dd>

        <dt>
            Telefono
        </dt>

        <dd>
            @Html.DisplayFor(model => model.telefono)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Actualizar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Volver al Listado", "Index")
</p>
