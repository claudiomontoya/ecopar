@model IEnumerable<Modelo.destinos>

@{
    ViewBag.Title = "Index";
}

<h2>Destinos</h2>

<p>
    @Html.ActionLink("Nuevo Registro", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Comuna
        </th>
        <th>
            Nombre
        </th>
        <th>
            Direccion
        </th>
        <th>
            Telefono
        </th>
        <th>
            Mail
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.comunas.comuna)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mail)
        </td>
        <td>
            @Html.ActionLink("Actualizar", "Edit", new { id = item.id }, new { @class = "btn btn-warning btn-sm" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.id }, new { @class = "btn btn-primary btn-sm" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-sm" }) |
            @Html.ActionLink("Agregar Contactos", "Index", "DestinoPersonas", new { id = item.id }, new { @class = "btn btn-success btn-sm" }) |
            @Html.ActionLink("Agregar Bodegas", "Index", "BodegasDestinos", new { id = item.id }, new { @class = "btn btn-success btn-sm" })
        </td>
    </tr>
}

</table>
