@section scriptsjs
{
    <script>

        $(document).ready(function () {
            $("#region").change(function () {
                $.get("/Sucursal/GetComunas", { region: $('#region').val() }, function (data) {
                    $("#id_comuna").empty();
                    $.each(data, function (index, row) {
                        $("#id_comuna").append("<option value='"+row.id+"'>"+row.comuna+"</option>");
                    })
                })
            });
        });
    </script>
