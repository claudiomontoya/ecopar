@model IEnumerable<Modelo.clientes>

@{
    ViewBag.Title = "Forma de Pago";
}


<h2>Clientes</h2>
<p>
    @Html.ActionLink("Nuevo Registro", "Create",null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
       
        <th>
            Rut
        </th>
        <th>
           Nombre Cliente
        </th>
        <th>
            Direccion
        </th>
        <th>
            Numero
        </th>
        <th>
            Telefono
        </th>
        <th>
            Celular
        </th>
    
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
       
        <td>
            @Html.DisplayFor(modelItem => item.rut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.celular)
        </td>
       
       
        <td>
            @Html.ActionLink("Actualizar", "Edit", new { id=item.id }, new { @class = "btn btn-warning btn-sm" }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }, new { @class = "btn btn-primary btn-sm" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-sm" }) |
            @Html.ActionLink("Agregar Contactos","Index", "ClientePersona", new { id = item.id }, new { @class = "btn btn-success btn-sm" })
        </td>
    </tr>
}

</table>
