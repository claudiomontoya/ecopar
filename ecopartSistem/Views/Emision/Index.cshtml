@model IEnumerable<Modelo.emision>


<h2>@ViewBag.titulo</h2>

<table class="table">
    <tr>
        <th>
           Codigo
        </th>
        <th>
          Fecha Emision
        </th>
        <th>
            Codigo Solicitud
        </th>
        <th>
            Cantidad de Pallet
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.id_solicitud)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        @if (item.estado == "recepcionada")
        {
        <td>
            @Html.ActionLink("Transferir a destino", "../TranferenciaDestino/create", new { id = item.id }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Transferir a Ecopar", "../TranferenciaBodega/create", new { id = item.id }, new { @class = "btn btn-success btn-sm" })
        </td>
        }
        else
        {
            <td>
                @Html.ActionLink("Ver Detalle", "../TranferenciaDestino/create", new { id = item.id }, new { @class = "btn btn-primary btn-sm" })
                @Html.ActionLink("Finalizar", "../TranferenciaBodega/create", new { id = item.id }, new { @class = "btn btn-success btn-sm" })
            </td>
        }
    </tr>
}

</table>
